---
import Layout from '../layouts/Layout.astro';
---

<Layout title="Welcome">
  <!-- Hero Section -->
  <section class="bg-green-700 text-white py-20">
    <div class="container mx-auto px-4">
      <div class="max-w-3xl mx-auto text-center">
        <h1 class="text-4xl md:text-5xl font-bold mb-6">
          Sustainable Energy Solutions for a Better Future
        </h1>
        <p class="text-xl mb-8">
          Discover research-based articles and insights about renewable energy and decarbonization.
        </p>
        <a
          href="/articles"
          class="inline-block bg-white text-green-700 px-8 py-3 rounded-lg font-semibold hover:bg-green-50 transition-colors"
        >
          Explore Articles
        </a>
      </div>
    </div>
  </section>

  <!-- Featured Topics -->
  <section class="py-16">
    <div class="container mx-auto px-4">
      <h2 class="text-3xl font-bold text-center mb-12">Featured Topics</h2>
      <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
        <div class="bg-white rounded-lg shadow-md p-6">
          <div class="w-12 h-12 bg-green-100 rounded-lg flex items-center justify-center mb-4">
            <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 text-green-700" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z" />
            </svg>
          </div>
          <h3 class="text-xl font-semibold mb-2">Renewable Energy</h3>
          <p class="text-gray-600">
            Explore the latest developments in solar, wind, and other renewable energy sources.
          </p>
        </div>
        <div class="bg-white rounded-lg shadow-md p-6">
          <div class="w-12 h-12 bg-green-100 rounded-lg flex items-center justify-center mb-4">
            <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 text-green-700" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3.055 11H5a2 2 0 012 2v1a2 2 0 002 2 2 2 0 012 2v2.945M8 3.935V5.5A2.5 2.5 0 0010.5 8h.5a2 2 0 012 2 2 2 0 104 0 2 2 0 012-2h1.064M15 20.488V18a2 2 0 012-2h3.064" />
            </svg>
          </div>
          <h3 class="text-xl font-semibold mb-2">Green Gas Solutions</h3>
          <p class="text-gray-600">
            Learn about innovative approaches to reduce greenhouse gas emissions.
          </p>
        </div>
        <div class="bg-white rounded-lg shadow-md p-6">
          <div class="w-12 h-12 bg-green-100 rounded-lg flex items-center justify-center mb-4">
            <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 text-green-700" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z" />
            </svg>
          </div>
          <h3 class="text-xl font-semibold mb-2">Sustainable Practices</h3>
          <p class="text-gray-600">
            Discover practical ways to implement sustainable energy solutions.
          </p>
        </div>
      </div>
    </div>
  </section>

  <!-- Latest Articles Preview -->
  <section class="bg-gray-100 py-16">
    <div class="container mx-auto px-4">
      <h2 class="text-3xl font-bold text-center mb-12">Latest Articles</h2>
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
        {[1, 2, 3].map(() => (
          <article class="bg-white rounded-lg shadow-md overflow-hidden">
            <div class="aspect-w-16 aspect-h-9 bg-gray-200"></div>
            <div class="p-6">
              <h3 class="text-xl font-semibold mb-2">
                <a href="#" class="text-gray-900 hover:text-green-700">
                  Sample Article Title
                </a>
              </h3>
              <p class="text-gray-600 mb-4">
                Lorem ipsum dolor sit amet, consectetur adipiscing elit. Sed do eiusmod tempor incididunt ut labore.
              </p>
              <a href="#" class="text-green-700 font-medium hover:text-green-800">
                Read More â†’
              </a>
            </div>
          </article>
        ))}
      </div>
    </div>
  </section>
</Layout>